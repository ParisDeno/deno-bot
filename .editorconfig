; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**/*.yml]
indent_size = 2
insert_final_newline = false

[*.md]
indent_size = 4
trim_trailing_whitespace = false

[*.json]
insert_final_newline = false

[**/*.{t,j}s?]
trim_trailing_whitespace = false

[**/*.{?c,le}ss]
trim_trailing_whitespace = false
